<?xml version="1.0" encoding="utf-8"?>
<phpcompatinfo
        reference="PHP5"
        report="summary"
        reportFileAppend="false"
        cacheDriver="file"
        recursive="true"
        fileExtensions="php, htm"
        consoleProgress="false"
        verbose="false">

    <excludes>
        <exclude id="polyglott">
            <directory name="config"/>
            <directory name="data"/>
            <directory name="help"/>
            <directory name="images"/>
            <directory name="languages"/>
            <directory name="tests"/>
        </exclude>
    </excludes>
</phpcompatinfo>
